{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "promise-function-async": true,
    "curly": [true, "ignore-same-line"],
    "no-conditional-assignment": true,
    "prefer-const": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-training-whitespace": true,
    "encoding": true,
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "promise-function-async": true,
    "no-console": [true, "log"], // forbid console.log only
    "no-var-requires": false, // interferes with usage of require() for non-JS resources
    "no-string-literal": false // interferes with TS property access conventions
  }
}