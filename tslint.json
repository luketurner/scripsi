{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "promise-function-async": true,
    "curly": [true, "ignore-same-line"],
    "no-conditional-assignment": true,
    "prefer-const": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-trailing-whitespace": true,
    "encoding": true,
    "trailing-comma": [true, {"singleline": "never"}],
    "no-console": [true, "log"], // forbid console.log only
    "no-var-requires": false, // interferes with usage of require() for non-JS resources
    "no-string-literal": false, // interferes with TS property access conventions
    "no-implicit-dependencies": false, // interferes with webpack require()
    "no-submodule-imports": false, // interferes with webpack require()
    "jsx-curly-spacing": "never",
    "jsx-equals-spacing": "never",
    "jsx-no-lambda": false, // so annoying! Should re-enable it once I care about performance.
    "jsx-no-multiline-js": false, // prevents the most concise way to do some things
    "interface-name": false // seems to conflict with how I think of TS interfaces
  }
}